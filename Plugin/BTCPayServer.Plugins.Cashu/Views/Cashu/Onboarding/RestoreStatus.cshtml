@using BTCPayServer.Plugins.Cashu.Data.Models
@model BTCPayServer.Plugins.Cashu.Services.RestoreStatus
@{
    Layout = "_LayoutSimple";
    ViewData["Title"] = Model?.Status is RestoreState.Completed or RestoreState.CompletedWithErrors 
        ? "Wallet Restored" 
        : "Recovering Wallet";
    
    var isProcessing = Model?.Status is RestoreState.Queued or RestoreState.Processing;
    var isCompleted = Model?.Status is RestoreState.Completed or RestoreState.CompletedWithErrors;
    var isFailed = Model?.Status == RestoreState.Failed;
}

@section PageHeadContent {
    @if (isProcessing)
    {
        <meta http-equiv="refresh" content="3">
    }
    <style>
        .restore-container {
            max-width: 700px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }
        
        .restore-title {
            font-size: 1.75rem;
            font-weight: 600;
            text-align: center;
            margin-bottom: 2rem;
        }
        
        /* Processing Card */
        .processing-card {
            background: var(--btcpay-body-bg);
            border: 1px solid var(--btcpay-body-border-light);
            border-radius: 8px;
            padding: 2rem;
            text-align: center;
        }
        
        .spinner-container {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
            margin-bottom: 0.5rem;
        }
        
        .spinner {
            width: 20px;
            height: 20px;
            border: 3px solid var(--btcpay-body-border-light);
            border-top-color: #f7931a;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }
        
        @@keyframes spin {
            to { transform: rotate(360deg); }
        }
        
        .progress-text {
            color: var(--btcpay-body-text-muted);
            font-size: 0.95rem;
        }
        
        .current-mint {
            color: var(--btcpay-body-text-muted);
            font-size: 0.85rem;
            margin-top: 0.75rem;
            word-break: break-all;
        }
        
        .current-mint code {
            display: block;
            color: var(--btcpay-body-text);
            background: var(--btcpay-body-bg-medium);
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: 0.8rem;
            margin-top: 0.375rem;
        }
        
        /* Mint List */
        .mint-list {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }
        
        .mint-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem 1.25rem;
            background: var(--btcpay-body-bg);
            border: 1px solid var(--btcpay-body-border-light);
            border-radius: 8px;
            gap: 1rem;
        }
        
        .mint-info {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            min-width: 0;
            flex: 1;
        }
        
        .mint-icon {
            flex-shrink: 0;
            width: 24px;
            height: 24px;
            color: var(--btcpay-body-text-muted);
        }
        
        .mint-url {
            font-size: 0.9rem;
            color: var(--btcpay-body-text-muted);
            word-break: break-all;
            line-height: 1.3;
        }
        
        .mint-balance {
            flex-shrink: 0;
            font-size: 0.95rem;
            font-weight: 500;
            color: var(--btcpay-body-text);
            white-space: nowrap;
        }
        
        /* Finish Button */
        .finish-btn {
            display: block;
            width: 100%;
            max-width: 200px;
            margin: 2rem auto 0;
            padding: 0.75rem 2rem;
            background: #51b13e;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 1rem;
            font-weight: 500;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            transition: background 0.2s ease;
        }
        
        .finish-btn:hover {
            background: #469a35;
            color: white;
        }
        
        /* Warnings */
        .warnings-section {
            margin-top: 1.5rem;
            padding: 1rem;
            background: var(--btcpay-warning-bg, rgba(255, 193, 7, 0.1));
            border: 1px solid var(--btcpay-warning-border, #ffc107);
            border-radius: 8px;
        }
        
        .warnings-title {
            font-size: 0.9rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: var(--btcpay-warning-text, #856404);
        }
        
        .warnings-list {
            margin: 0;
            padding-left: 1.25rem;
            font-size: 0.85rem;
            color: var(--btcpay-body-text-muted);
        }
        
        /* Error State */
        .error-container {
            text-align: center;
            padding: 2rem;
        }
        
        .error-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }
        
        .retry-btn {
            display: inline-block;
            padding: 0.75rem 2rem;
            background: var(--btcpay-primary);
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 1rem;
            text-decoration: none;
            margin-top: 1rem;
        }
        
        .retry-btn:hover {
            background: var(--btcpay-primary-dark);
            color: white;
        }
        
        /* Not Found State */
        .not-found {
            text-align: center;
            padding: 3rem 1rem;
        }
        
        /* Responsive */
        @@media (max-width: 576px) {
            .restore-container {
                padding: 1rem 0.75rem;
            }
            
            .restore-title {
                font-size: 1.5rem;
            }
            
            .mint-item {
                flex-direction: column;
                align-items: flex-start;
                gap: 0.5rem;
                padding: 0.875rem 1rem;
            }
            
            .mint-balance {
                align-self: flex-end;
            }
            
            .processing-card {
                padding: 1.5rem 1rem;
            }
        }
    </style>
}

<div class="restore-container">
    @if (Model == null)
    {
        <div class="not-found">
            <div class="error-icon">üîç</div>
            <h2>Restore job not found</h2>
            <p class="text-muted">The restore job you're looking for doesn't exist or has expired.</p>
            <a href="/stores/@ViewContext.RouteData.Values["storeId"]/cashu/restore-wallet" class="retry-btn">
                Try again
            </a>
        </div>
    }
    else if (isProcessing)
    {
        <h1 class="restore-title">Recovering your wallet...</h1>
        
        <div class="processing-card">
            <div class="spinner-container">
                <div class="spinner"></div>
                <span class="progress-text">Fetching balances from your mints... (@Model.ProcessedMints/@Model.TotalMints)</span>
            </div>
            
            @if (Model.CurrentMints?.Count > 0)
            {
                <div class="current-mint">
                    Processing:
                    @foreach (var mint in Model.CurrentMints)
                    {
                        <code>@mint</code>
                    }
                </div>
            }
            else if (!string.IsNullOrEmpty(Model.CurrentMint))
            {
                <div class="current-mint">
                    Processing: <code>@Model.CurrentMint</code>
                </div>
            }
        </div>
        
        @if (Model.Errors.Any())
        {
            <div class="warnings-section">
                <div class="warnings-title">‚ö†Ô∏è Warnings</div>
                <ul class="warnings-list">
                    @foreach (var error in Model.Errors)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
        }
    }
    else if (isCompleted)
    {
        <h1 class="restore-title">Your Cashu wallet is successfully restored!</h1>
        
        <div class="mint-list">
            @foreach (var mint in Model.RestoredMints)
            {
                var totalSats = mint.Balances?.Values.Sum(x => (long)x) ?? 0;
                <div class="mint-item">
                    <div class="mint-info">
                        <svg class="mint-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2z"/>
                            <path d="M12 11h4"/>
                            <path d="M12 7h4"/>
                            <path d="M8 15h8"/>
                        </svg>
                        <span class="mint-url">@mint.MintUrl</span>
                    </div>
                    <span class="mint-balance">@totalSats.ToString("N0") sats</span>
                </div>
            }
        </div>
        
        @if (Model.Errors.Any())
        {
            <div class="warnings-section">
                <div class="warnings-title">‚ö†Ô∏è Some mints had issues</div>
                <ul class="warnings-list">
                    @foreach (var error in Model.Errors)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
        }
        
        <a href="~/stores/@Model.StoreId/cashu" class="finish-btn">Finish</a>
    }
    else if (isFailed)
    {
        <div class="error-container">
            <div class="error-icon">‚ùå</div>
            <h2 class="restore-title">Recovery Failed</h2>
            <p class="text-muted">Something went wrong while restoring your wallet.</p>
            
            @if (Model.Errors.Any())
            {
                <div class="warnings-section" style="text-align: left;">
                    <div class="warnings-title">Errors:</div>
                    <ul class="warnings-list">
                        @foreach (var error in Model.Errors)
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }
            
            <a href="/stores/@ViewContext.RouteData.Values["storeId"]/cashu/restore-wallet" class="retry-btn">
                Try again
            </a>
        </div>
    }
</div>
